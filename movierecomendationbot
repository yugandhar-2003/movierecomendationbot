import gradio as gr
import requests

# === CONFIG ===
OMDB_API_KEY = "2eee62"  # Replace with your OMDB key
ULTRAMSG_INSTANCE_ID = ""  # Replace with UltraMsg Instance ID
ULTRAMSG_TOKEN = ""      # Replace withUltraMsg Token
TO_PHONE_NUMBER = "918309359937"         # WhatsApp number (no +)

NUM_RESULTS = 10

# === Functions ===

def search_movies(query):
    url = f"http://www.omdbapi.com/?apikey={OMDB_API_KEY}&s={query}"
    response = requests.get(url)
    data = response.json()
    return data.get("Search", [])[:NUM_RESULTS]

def get_movie_details(imdb_id):
    url = f"http://www.omdbapi.com/?apikey={OMDB_API_KEY}&i={imdb_id}"
    response = requests.get(url)
    return response.json()

def send_whatsapp_message(message):
    url = f"https://api.ultramsg.com/{ULTRAMSG_INSTANCE_ID}/messages/chat?token={ULTRAMSG_TOKEN}"
    payload = {
        "to": TO_PHONE_NUMBER,
        "body": message
    }
    headers = {"Content-Type": "application/json"}
    response = requests.post(url, json=payload, headers=headers)
    return response.json()

def run_bot(query):
    results = search_movies(query)
    if not results:
        return "âŒ No movies found. Try a different keyword."

    all_msgs = []
    for movie in results:
        details = get_movie_details(movie["imdbID"])
        msg = (
            f"ğŸ¬ *{details['Title']}* ({details['Year']})\n"
            f"â­ IMDb: {details.get('imdbRating', 'N/A')}\n"
            f"ğŸ“ {details.get('Plot', 'No plot available.')}\n"
            f"ğŸ“ Poster: {details.get('Poster')}"
        )
        send_result = send_whatsapp_message(msg)
        all_msgs.append(f"âœ… Sent: {details['Title']} - Status: {send_result}")

    return "\n\n".join(all_msgs)

# === Gradio Interface ===

interface = gr.Interface(
    fn=run_bot,
    inputs=gr.Textbox(label="ğŸ¬ Enter Movie Keyword (e.g. 'Batman', '2022', 'Love')"),
    outputs="text",
    title="ğŸ“² WhatsApp Movie Bot",
    description="Get movie suggestions via WhatsApp using OMDB + UltraMsg"
)

interface.launch()
